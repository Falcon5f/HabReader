<?xml version="1.0" encoding="utf-8"?>
<manifest 
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.meiolania.apps.habrahabr"
    android:versionCode="5"
    android:versionName="1.0"
    android:installLocation="auto">

    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="14" />
    
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme"
        android:hardwareAccelerated="true">
        
        <activity android:name=".activities.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".activities.PreferencesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
        
        <!-- Posts -->
        <activity android:name=".activities.PostsActivity" />
        <activity android:name=".activities.PostsShowActivity" />
        
        <!-- Hubs -->
        <activity android:name=".activities.HubsActivity" />
        <activity android:name=".activities.HubsShowActivity" />
        
        <!-- Q&A -->
        <activity android:name=".activities.QaActivity" />
        <activity android:name=".activities.QaShowActivity" />
        
        <!-- Events -->
        <activity android:name=".activities.EventsActivity" />
        <activity android:name=".activities.EventsShowActivity" />
        
        <!-- Companies -->
        <activity android:name=".activities.CompaniesActivity" />
        <activity android:name=".activities.CompaniesShowActivity" />
        
        <!-- People -->
        <activity android:name=".activities.PeopleActivity" />
        <activity android:name=".activities.PeopleShowActivity" />
        
        <service android:name="net.robotmedia.billing.BillingService" />
		<receiver android:name="net.robotmedia.billing.BillingReceiver">
			<intent-filter>
				<action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
				<action android:name="com.android.vending.billing.RESPONSE_CODE" />
				<action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
			</intent-filter>
		</receiver>
        
    </application>

</manifest>