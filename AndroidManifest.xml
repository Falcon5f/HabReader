<?xml version="1.0" encoding="utf-8"?>
<manifest 
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.meiolania.apps.habrahabr"
    android:versionCode="7"
    android:versionName="1.2"
    android:installLocation="auto">

    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="14" />
    
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme"
        android:hardwareAccelerated="true">
        
        <activity 
            android:name=".activities.DashboardActivity"
            android:configChanges="orientation|keyboard|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".activities.PreferencesActivity"
            android:configChanges="orientation|keyboard|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".activities.AuthActivity"
            android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <!-- Posts -->
        <activity android:name=".activities.PostsActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.PostsShowActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.PostsSearchActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <!-- Hubs -->
        <activity android:name=".activities.HubsActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.HubsShowActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.HubsSearchActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <!-- Q&A -->
        <activity android:name=".activities.QaActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.QaShowActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.QaSearchActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <!-- Events -->
        <activity android:name=".activities.EventsActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.EventsShowActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <!-- Companies -->
        <activity android:name=".activities.CompaniesActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.CompaniesShowActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <!-- People -->
        <activity android:name=".activities.PeopleActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.PeopleShowActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.PeopleSearchActivity" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <service android:name="net.robotmedia.billing.BillingService" />
		<receiver android:name="net.robotmedia.billing.BillingReceiver">
			<intent-filter>
				<action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
				<action android:name="com.android.vending.billing.RESPONSE_CODE" />
				<action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
			</intent-filter>
		</receiver>
        
    </application>

</manifest>