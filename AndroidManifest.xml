<?xml version="1.0" encoding="utf-8"?>
<manifest 
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.meiolania.apps.habrahabr"
    android:versionCode="1"
    android:versionName="1.0 beta">

    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        android:debuggable="true">
        
        <activity
            android:label="@string/app_name"
            android:name=".activities.Dashboard">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.dashboard.About" />
        <activity android:name=".activities.dashboard.Preferences" />
        
        <activity android:name=".activities.SignIn" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <activity android:name=".activities.People" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.PeopleSearch" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.PeopleShow" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <activity android:name=".activities.Companies" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.CompaniesSearch" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.CompaniesShow" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <activity android:name=".activities.Events" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.EventsShow" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <activity android:name=".activities.QA" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.QASearch" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.QAShow" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.QACommentsShow" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <activity android:name=".activities.Blogs" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.BlogsPosts" android:configChanges="orientation|keyboard|keyboardHidden" />
        
        <activity android:name=".activities.Posts" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.PostsShow" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.FavoritesPosts" android:configChanges="orientation|keyboard|keyboardHidden" />
        <activity android:name=".activities.PostsCommentsShow" android:configChanges="orientation|keyboard|keyboardHidden" />

        <activity android:name=".activities.HabrahabrIntentFilter">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
                <category android:name="android.intent.category.BROWSABLE"></category>
                <data android:scheme="http" android:pathPattern="/.*" android:host="habrahabr.ru"></data>
            </intent-filter>
        </activity>
        
        <receiver 
            android:name=".widgets.SmallPostsWidget"
            android:label="@string/small_posts_widget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider" android:resource="@xml/widget_small_posts" />
        </receiver>
        <service android:name=".widgets.SmallPostsWidget$UpdateService" />
        
    </application>

</manifest>